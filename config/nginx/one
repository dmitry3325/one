server {
    charset utf-8;
    client_max_body_size 128M;

    listen 8080; ## listen for ipv4
    #listen [::]:8080 default_server ipv6only=on; ## слушаем ipv6

    server_name lone;
    root        /home/dmitry/my/one/public/;
    index       index.php;

    access_log  /home/dmitry/my/one/storage/logs/access.log;
    error_log   /home/dmitry/my/one/storage/logs/error.log;

    location ~ /p/(.+).(gif|jpg|jpeg|png) {
        try_files $uri /;
    }

    location / {
                    # First attempt to serve request as file, then
                    # as directory, then fall back to displaying a 404.
                    try_files $uri $uri/ /index.php?$query_string;
                    # Uncomment to enable naxsi on this location
                    # include /etc/nginx/naxsi.rules
    }

    location ~ \.php$ {
                    try_files $uri =404;
                    fastcgi_split_path_info ^(.+\.php)(/.+)$;
                    fastcgi_pass unix:/var/run/php/php7.0-fpm.sock;
                    fastcgi_index index.php;
                    fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
                    include fastcgi_params;
    }
}
